{
  "name": "codelens",
  "version": "1.0.0",
  "description": "MCP tool for generating narrated code walkthrough videos",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
